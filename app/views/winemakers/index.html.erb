<p id="notice"><%= notice %></p>

<h1>Winemakers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Nationality</th>
      <th>Work</th>
      <th>Magazine</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @winemakers.each do |winemaker| %>
      <tr>
        <td><%= winemaker.name %></td>
        <td><%= winemaker.age %></td>
        <td><%= winemaker.nationality %></td>
        <td><%= winemaker.work %></td>
        <!--#Mostrar los Strains -->
        <!--#each para que muestre el verdadero nombre -->
        <td>
            <% winemaker.magazines.each do |pg| %>
              <%= pg.name %>
            <% end %>
        </td>
        <td>
            <% winemaker.winemakers_magazines.each do |pg| %>
              <%= pg.position %>
            <% end %>
        </td>
        <td><%= link_to 'Show', winemaker %></td>
        <td><%= link_to 'Edit', edit_winemaker_path(winemaker) %></td>
        <td><%= link_to 'Destroy', winemaker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

