<p id="notice"><%= notice %></p>

<h1>Wines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Strain</th>
      <th>Percentaje</th>
      <th>Winemaker</th>
      <th>Qualificarion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.name %></td>
        <!--#Mostrar los Strains -->
        <!--#each para que muestre el verdadero nombre -->
        <td>
            <% wine.strains.each do |pg| %>
              <%= pg.name %>
            <% end %>
        </td>
        <td>
            <% wine.wines_strains.each do |pg| %>
              <%= pg.percentaje %>
            <% end %>
        </td>
        <td>
            <% wine.winemakers.each do |pg| %>
              <%= pg.name %>
            <% end %>
        </td>
        <td>
            <% wine.winemakers_wines.each do |pg| %>
              <%= pg.qualification %>
            <% end %>
        </td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wine', new_wine_path %>
<%= link_to 'Create strains', strains_path %>
<%= link_to 'Winemakers', winemakers_path %>
<%= link_to 'Cerrar', destroy_user_session_path %>
